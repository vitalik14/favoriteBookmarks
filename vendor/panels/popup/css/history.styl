.options-history {
	display: flex;
	align-items: center;
	width: 100%;
	padding: 10px 2px 10px 10px;
	background: $color7;
}		
.options-history .date-period {
	display: flex;
	width: 100%;
	justify-content: space-around;
	align-items: center;
}

.options-history .date-period > div {
	display: flex;
}

.options-history .date-period .arrow {
	background: url(../img/array_right.svg) no-repeat;
	width: 26px;
	height: 20px;
	background-position: 0 -2px;
}
.options-history .date-period input[type=date] {
	width: 130px;
}
.options-history .date-period button {
	cursor: pointer;
}

#searchPeriodHistory
	display block
	background $color3
	border 2px solid $color_white
	border-radius 8px
	color $color_white
	padding 5px 10px
	cursor pointer
	float right
	user-select none
	outline none
	&:hover
		box-shadow: inset 0 0 4px $color_white
		border-color $color3
	&[disabled]
		box-shadow none
		border-color $color_white
		opacity 0.4
		cursor default



.results.history > li .show-url {
	background-image: url(../img/history_info.svg);
	width:15px;
	height 15px;
	background-size: contain;
	position: absolute;
	z-index : 9;
    top: 0;
    left: 347px;
	cursor: pointer;
	white-space: nowrap;
}

.results.history > li > ul > li  .show-url:hover {
    cursor: help;
	z-index: 11;	
	background-image: url(../img/history_info.svg);
}
.results.history > li > ul > li  .show-url + a .url {
    display: none !important;
	word-break: break-word;    
	z-index: 100;
	background: #ffffff;
   // background: url(../images/status-info.png) #f0f0f0 no-repeat 100% 5%;
    left: -5px;
    width: calc(100% - 15px);
    position: absolute;
    top: 33px;
    text-decoration: none;
	
    padding: 7px 10px 9px 10px;
	border-top: 2px solid #f38848;
    border-bottom: 2px solid #f38848;
	box-shadow: 0 23px 50px #666;
}
.results.history > li > ul > li  .show-url:hover + a .url {
    display: block !important;
}

.results.history > li:last-child > ul > li:last-child  .show-url:hover:before {
    width: 31px;
    height: 22px;
    position: absolute;
    content: '';
    left: -6px;
    top: 12px;
    z-index: 10;
}

.results.history > li  .show-url:hover + a .url, .results.history > li  .show-url + a .url:hover {
    display: block !important;
}