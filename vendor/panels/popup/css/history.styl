@import "vars.styl"

#tabs_wrap_history {
	width: 100%;
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
}
.t_history .search {
	border: 1px solid $color3;
}
.addTags
	position absolute
	z-index 2
	width 30px
	height 27px
	text-align center
	right 5px
	top 5px
	line-height 1.4
	background $color1
	font-size 18px
	font-weight bold
	color $color_white
	cursor pointer
	user-select none
	border-radius 0 3px 3px 0
	&:active
		opacity 0.7

.t_history #addTags_h {
	background: $color3;
}

.t_history .cssload-speeding-wheel {
	border-color: $color3;
	border-left-color: transparent;
	border-right-color: transparent;
}
.results .deleteHistory
	width 15px
	height 15px
	line-height 1
	text-align center
	color $color10
	border-radius 50%
	box-shadow 0 0 0px #F33
	display inline-block
	vertical-align top
	font-size 13px
	font-weight bold
	cursor pointer
	transition all 0.1s
	font-family Arial
	margin-top 5px
	margin-left 2px
	&:hover
		box-shadow 0 0 5px $red
		+a
			color $red

#openHistory
	display block
	background $color9
	border 2px solid $color_white
	box-shadow 0 0 1px $color10
	border-radius 10px
	color $color_white
	padding 5px 10px
	cursor pointer
	float right
	user-select none
	&:hover
		box-shadow: inset 0 0 1px $color_white

#findHistory
	color $color_white

.history-options {
	display: flex;
}

.btn-all-show-hide {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 22px;
	height: 22px;
	background: #4bc0b1;
	border-radius: 5px;
	box-shadow: 1px 1px 5px #eee;
	color: #FFF;
	text-align: center;
	cursor: pointer;
}

.results.history {
	max-height: 380px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px -1px 4px $color3;
	padding-left: 2px;
	margin-top: 2px;
}

.results.history > li {
	border-bottom: 1px solid #DDD;
	position: relative;
	padding: 3px 0;
}

.results.history > li > ul > li:nth-child(even) {
	background-color: $color6;
}

.results.history > li .date-title {
	cursor: pointer;
	font-size: 15px;
	color: #333;
	background: $color3_light;
	padding: 4px 4px 4px 10px;
	border-radius: 7px 7px 0 0;
	text-align: left;
	font-family: inherit;
	display: flex;
	justify-content: space-between;
	height: 27px;
    align-items: center;
    padding: 0 5px;
	transition: all 0.5s;
}
.results.history > li .date-title:hover,  .results.history > li .date-title.active {
	background: #fbe7db;
	transition: all 0.1s;
}
.results.history > li .date-title.active {
	position: sticky;
    top: 0;
    z-index: 10;
}
.results.history > li .date-title .title {
	background: url(../img/date.svg) no-repeat;
	padding-left: 30px;
	user-select: none;
}
.results.history > li .date-title.visited .title {
	background: url(../img/date_visited.svg) no-repeat;
	padding-left: 30px;
}

.results.history > li .date-title .counter {
	font-size: 12px;
    background: #fbe7db;
    padding: 2px 4px;
    border-radius: 3px;
    color: #333;
    font-weight: bold;
	user-select: none;
}

.results.history > li .date-title + ul {
	display: none;
	border-left: 4px solid $color3_light
}

.results.history > li .date-title.active + ul {
	display: block;
	border-left: 4px solid #fbe7db;
}
.results.history > li > ul {
	display: block;
	background: #fff;
}
.results.history > li > ul > li {
	position: relative;
	display block;
	padding: 10px 0;
	background: #fcfcfc;
	border-bottom: 1px solid #ddd;
}
.results.history > li > ul > li:nth-child(odd) {
	background-color: #fFF;
}
.results.history > li > ul > li:last-child {
	border-width: 0;
}
.results.history > li > ul > li:hover {
    background-color: #f9f5f2;
}
.results.history > li > ul > li > a {
	display: flex;
	justify-content: flex-start;
    align-items: center;
	color: $color10;
	font-size: 13px;
	text-decoration: none;
    padding: 4px 15px 4px 35px;
    background-repeat: no-repeat;
    background-position: 10px 6px;
	width: calc(100% - 35px);
	cursor: pointer;
	overflow: hidden;
}
.results.history > li > ul > li .h-t {
    width: 100%;
}
.results.history > li .time {
    display: inline-block;
    font-size: 12px;
	position: absolute;
    top: 0;
    left: 280px;
	width: max-content;
	background: #fff;
    padding: 0 2px;
	user-select none;
	opacity: 0.6
}

.results.history > li .btn-search {
	background-image: url(../img/history_filter.svg);
	width:15px;
	height 15px;
	background-size: contain;
	position: absolute;
	z-index : 9;
    top: 0;
     left: 375px;
	cursor: pointer;
	white-space: nowrap;
}
.results.history > li .btn-search:hover {
	background-image: url(../img/history_filter_active.svg);
}




