@import "vars.styl"

.tab-history
	.wrap-history
		background #fef9f6
	.search-block
		.search
			border 1px solid $color3
			box-shadow 0px 1px 8px $color3
		.inner-search
			.add-tag
				background-color $color3
			.cssload-speeding-wheel
				border-color: $color3
			.open-tabs span
				color $color3

.results-history
	max-height: 341px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px 0px 7px $color3;
	padding-left: 2px;
	margin-top: 2px;
	background: $color_white
	>li
		border-bottom: 1px solid #DDD;
		position: relative;
		padding: 3px 0;
		.date-title 
			cursor: pointer;
			font-size: 15px;
			color: #333;
			background: $color3_light;
			padding: 4px 4px 4px 10px;
			border-radius: 7px 7px 0 0;
			text-align: left;
			font-family: inherit;
			display: flex;
			justify-content: space-between;
			height: 27px;
			align-items: center;
			padding: 0 5px;
			transition: all 0.5s;
			&:hover
				background: #fbe7db;
				transition: all 0.1s;
			&.active
				background: #fbe7db;
				transition: all 0.1s;
				position: sticky;
				top: 0;
				z-index: 10;
			.title
				background: url(../img/date.svg) no-repeat;
				padding-left: 30px;
				user-select: none;
			&.visited
				.title
					background: url(../img/date_visited.svg) no-repeat;
					padding-left: 30px;
			.counter
				font-size: 12px;
				background: #fbe7db;
				padding: 2px 4px;
				border-radius: 3px;
				color: #333;
				font-weight: bold;
				user-select: none;
			+ul
				display: none;
				border-left: 4px solid $color3_light
			&.active
				+ul
					display: block;
					border-left: 4px solid #fbe7db;
		>ul
			display: block;
			background: #fff;
			>li
				position: relative;
				display block;
				padding: 10px 0;
				background: #fcfcfc;
				border-bottom: 1px solid #ddd;
				transition: all 0.3s;
				&:nth-child(even)
					background-color: $color6;
				&:nth-child(odd)
					background-color: #fFF;
				&:last-child
					border-width: 0;
					.show-url
						&:hover
							&:before
								width: 31px;
								height: 22px;
								position: absolute;
								content: '';
								left: -6px;
								top: 12px;
								z-index: 10;
				&:hover
					background-color: #f9f5f2;
					transition: all 0.1s;
				>a
					display: flex;
					justify-content: flex-start;
					align-items: center;
					color: $color10;
					font-size: 13px;
					text-decoration: none;
					padding: 4px 15px 4px 35px;
					background-repeat: no-repeat;
					background-position: 10px 6px;
					width: calc(100% - 35px);
					cursor: pointer;
					overflow: hidden;
					.h-t
						width: 100%;
						text-rendering: optimizeSpeed;
				.time
					display: inline-block;
					font-size: 12px;
					position: absolute;
					top: 1px;
					left: 270px;
					width: max-content;
					background: #fff;
					padding: 0 2px;
					user-select none;
					opacity: 0.6
				.btn-search
					background-image: url(../img/history_filter.svg);
					width:15px;
					height 15px;
					background-size: contain;
					position: absolute;
					z-index : 9;
					top: 2px;
					left: 371px;
					cursor: pointer;
					white-space: nowrap;
					&:hover
						background-image: url(../img/history_filter_active.svg);
				.show-url
					background-image: url(../img/history_info.svg);
					width:15px;
					height 15px;
					background-size: contain;
					position: absolute;
					z-index : 9;
					top: 2px;
					left: 343px;
					cursor: pointer;
					white-space: nowrap;
					&:hover
						cursor: help;
						z-index: 11;	
						background-image: url(../img/history_info.svg);
						+a
							.url
								display: block
					+a
						.url
							display: none
							word-break: break-word;
							z-index: 100;
							background: #ffffff;
							left: -5px;
							width: calc(100% - 15px);
							position: absolute;
							top: 33px;
							text-decoration: none;
							padding: 7px 10px 9px 10px;
							border-top: 2px solid #f38848;
							border-bottom: 2px solid #f38848;
							box-shadow: 0 23px 50px #666;
							&:hover
								display: block


.options-bottom
	.date-period
		display: flex;
		width: 100%;
		justify-content: space-around;
		align-items: center;
		div
			display: flex;
		.arrow
			background: url(../img/array_right.svg) no-repeat;
			width: 26px;
			height: 20px;
			background-position: 0 -2px;
		input[type=date]
			width: 130px;
		button
			cursor: pointer;
		#searchPeriodHistory
			display block
			background $color3
			border 2px solid $color_white
			border-radius 8px
			color $color_white
			padding 5px 10px
			cursor pointer
			float right
			user-select none
			outline none
			&:hover
				box-shadow: inset 0 0 4px $color_white
				border-color $color3
			&[disabled]
				box-shadow none
				border-color $color_white
				opacity 0.4
				cursor default
