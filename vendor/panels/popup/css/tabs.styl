@import "vars.styl"

.tabs-items
	float left
	max-height 387px
	overflow-x hidden
	overflow-y scroll
	width 100%
	box-shadow 0px -1px 4px $color1
	border-bottom 1px solid $color8
	margin-top 2px
	>li
		box-shadow 2px 1px 3px #D3D3D3
		display flex
		align-items: center
		border-radius 4px
		padding: 8px 0 8px 4px;
		border-bottom 1px solid $color8
		position: relative
		transition all 0.3s
		&:hover
			background-color rgba(72, 136, 243, 0.1)
			transition all 0.1s
		&.active
			background-color rgba(72, 136, 243, 0.3)	
		&:last-child
			.show-url
				&:hover
					&:before
						width: 31px;
						height: 22px;
						position: absolute;
						content: '';
						left: -6px;
						top: 12px;
						z-index: 10;
		.btn
			width: 20px;
			height: 20px;
			padding-top: 4px;
			text-align: center;
			display: inline-block;
			vertical-align: middle;
			align-self: flex-start;
			.del
				width: 14px;
				height: 14px;
				line-height: 1;
				text-align: center;
				color: $color10;
				border-radius: 50%;
				box-shadow: 0 0 0px #F33;
				display: inline-block;
				vertical-align: middle
				font-size: 13px;
				font-weight: bold;
				cursor: pointer;
				transition: all 0.1s;
				font-family: Arial
				background: url(../img/delete.svg) no-repeat 0px 0px
				&:hover
					background: url(../img/delete_active.svg) no-repeat 0px 0px

			&:hover ~ .tab .tabs-title
				color $red
				transition all 0.2s

		.tab
			display flex
			align-items: center
			justify-content: flex-start
			padding: 3px 5px 3px 7px
			width 100%
			cursor pointer
			&.short
				.tabs-title
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
			.tabs-title
				font-size 13px
				border-radius 5px
				line-height 1.6
				color $color10
				transition all 0.2s
				word-break break-word
				max-width: 320px;
			img
				display inline-block
				transition all 0.2s
				margin-right 7px
				margin-top: 3px;
				width 16px
				align-self: flex-start;
		.info
			width 20px
			height 20px
			margin-right: 5px;
			.audio
				background url(../img/tab_use_sound.svg) no-repeat
				width 20px
				height 20px
				background-size contain
				margin-top: 7px;
		.show-url
			background-image: url(../img/history_info.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 1px;
			left: 380px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				cursor: help;
				z-index: 11;
				background-image: url(../img/history_info.svg);
				+div
					.url
						display: block
			+div
				.url
					display: none;
					word-break: break-word;
					z-index: 100;
					background: #ffffff;
					left: -5px;
					width: calc(100% - 15px);
					position: absolute;
					top: 33px;
					text-decoration: none;
					padding: 7px 10px 9px 10px;
					border-top: 2px solid $color1
					border-bottom: 2px solid $color1
					box-shadow: 0 23px 50px #666;
					cursor: default
					&:hover
						display: block


.options-tabs
	clear both
	padding 3px 8px 3px 8px
	display flex
	justify-content flex-start
	align-content center
	align-items center
	width calc(100% - 16px)
	background $color7
	border-top 1px solid $color_white
	.activity
		display inline-block
		width 100%
		#deleteCopy
			display none
			background $color1
			border 2px solid $color_white
			border-radius 8px
			color $color_white
			padding 5px 10px
			cursor pointer
			float right
			user-select none
			&:hover
				box-shadow inset 0 0 4px $color_white
				border-color $color1
		button
			cursor pointer

	#openTabs
		font-weight bold
		font-size 12px
		color $color1
		padding 10px 5px 5px 5px
		vertical-align middle
	.settings
		float left
		margin 3px 6px 3px 0
		display inline-block
		display flex
		position relative
		cursor pointer
		.settings-btn
			line-height 1.4
			font-size 14px
			padding 2px 5px
			border-radius 5px
			position relative
			z-index 3
			border 1px solid $color1
			color $color1
			margin-left 1px
		.settings-options
			top: -50px;
			background $color1
			display none
			position absolute
			width 225px
			height: 29px;
			padding 10px
			border-radius 5px 5px 5px 0
			border 1px solid #DDD
			z-index 2
			>div
				float left
				width 100%
				padding 3px 0
				label
					line-height 1
					font-size 13px
					color $color_white
					user-select none

				input
					line-height 1
					margin 3px 5px 3px 4px
					float left

				input[type='checkbox']
					-webkit-font-smoothing antialiased
					text-rendering optimizeSpeed
					width 15px
					height 15px
					margin 2px
					margin-right 5px
					display block
					float left
					position relative
					cursor pointer
				input[type='checkbox']:after
					content ""
					vertical-align middle
					text-align center
					line-height 16px
					position absolute
					cursor pointer
					height 15px
					width 15px
					left 0px
					top 0px
					font-size 12px
					background $color_white
					box-shadow 0 0 2px $color7
					border-radius 3px
				input[type='checkbox']:checked:after
					background $color_white
					content '\2714'
					color #000

.img-tabs {
	width: 20px;
	height: 20px;
	background: url(../img/tabs.png) no-repeat;
	background-size: contain;
	float: left;
}

.tabs-tabs
	.statistic .open-tabs
		min-width 50px
	.options-tabs .settings:hover
		.settings-options
			display block
			box-shadow 6px -3px 8px rgba(150, 150, 150, 0.5)
		.settings-btn
			border-top 1px solid $color1
			background $color1
			color $color_white
			border-radius 0 0 5px 5px
			box-shadow 2px 2px 3px rgba(150, 150, 150, 0.5)