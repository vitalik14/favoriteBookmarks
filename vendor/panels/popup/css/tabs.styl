@import "vars.styl"

.tab-tabs
	.wrap-tabs
		background: #f6f9fe;
	.search-block
		.search
			border: 1px solid $color1
			box-shadow 0px 1px 8px $color1
		.inner-search
			.add-tag
				background-color $color1
			.cssload-speeding-wheel
				border-color $color1
			.open-tabs span
				color $color1
				padding-right 5px

.results-tabs
	max-height: 346px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px 0px 7px $color1;
	padding-left: 2px;
	margin-top: 2px;
	background: $color_white
	>li
		border-bottom: 1px solid #DDD;
		position: relative;
		padding: 10px 0 10px 2px;
		display: flex;
		align-items: center;
		transition: all 0.3s;
		box-shadow 2px 1px 3px #D3D3D3
		&:last-child
			.show-url
				&:hover
					&:before
						width: 31px;
						height: 22px;
						position: absolute;
						content: '';
						left: -6px;
						top: 12px;
						z-index: 10
		&:hover
			background-color: rgba(75, 192, 177, 0.1) !important;
			transition: all 0.1s;
		.tab
			display: inline-block;
			color: $color10;
			font-size: 13px;
			text-decoration: none;
			padding: 4px 0 4px 30px;
			background-size: 16px;
			background-repeat: no-repeat;
			background-position: 5px 6px;
			width: calc(100% - 49px);
			cursor: pointer;
			text-rendering: optimizeSpeed;
			.t-t
				font-size 13px
				border-radius 5px
				line-height 1.6
				color $color10
				transition all 0.2s
				word-break break-word
			.short
				overflow hidden
				text-overflow ellipsis
				white-space nowrap
		.info
			width 20px
			height 20px
			position: absolute;
			top: 0;
			left: 315px;
			.audio
				background url(../img/tab_use_sound.svg) no-repeat
				width 20px
				height 20px
				background-size contain
		.delete
			width 15px
			height 15px
			line-height 1
			text-align center
			color $color10
			border-radius 50%
			box-shadow 0 0 0px #F33
			display inline-block
			vertical-align top
			font-size 13px
			font-weight bold
			cursor pointer
			transition all 0.1s
			font-family Arial
			margin-top 7px
			margin-left 2px
			align-self: flex-start;
			background: url(../img/delete.svg) no-repeat 0px 0px
			&:hover
				background: url(../img/delete_active.svg) no-repeat 0px 0px
				~a .t-t
					color $red

		.btn-search
			background-image: url(../img/history_filter.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 2px;
			left: 375px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				background-image: url(../img/tabs_filter_active.svg);
		.time
			display: inline-block;
			font-size: 12px;
			position: absolute;
			top: 2px;
			left: 205px;
			width: max-content;
			background: #fff;
			padding: 0 2px;
			user-select none
			opacity: 0.6;
		.show-url
			background-image: url(../img/history_info.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 2px;
			left: 347px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				cursor: help;
				z-index: 11;
				background-image: url(../img/history_info.svg);
				+.tab
					.url
						display: block;
			+.tab
				.url
					display: none;
					word-break: break-word;
					z-index: 100;
					background: #ffffff;
					left: -5px;
					width: calc(100% - 15px);
					position: absolute;
					top: 33px;
					text-decoration: none;
					padding: 7px 10px 9px 10px;
					border-top: 2px solid #4bc0b1;
					border-bottom: 2px solid #4bc0b1;
					box-shadow: 0 23px 50px #666;
					&:hover
						display: block;


.options-bottom
	.statistic
		padding: 0 0 0 37px;
		.open-tabs
			min-width 50px
			.img-tabs
				width: 20px;
				height: 20px;
				margin-top: 1px;
				background: url(../img/items_length.svg) no-repeat;
				background-size: contain;
				float: left;
			span
				font-weight bold
				font-size 12px
				color $color1
				padding 10px 5px 5px 5px
				vertical-align middle
				user-select: none
	.activity
		display inline-block
		width 100%
		button
			display none
			background $color1
			border 2px solid $color_white
			border-radius 8px
			color $color_white
			padding 5px 10px 5px;
			cursor pointer
			float right
			user-select none
			&:hover
				box-shadow inset 0 0 4px $color_white
				border-color $color1
	.settings
		display: flex;
		position: absolute;
		left: 5px;
		top: 4px;
		cursor: pointer;
		z-index: 10;
		border-radius: 5px;
		.settings-btn
			line-height 1.4
			font-size 14px
			padding 1px 5px
			border-width 2px
			border-right-width: 0
			position: absolute;
			z-index 3
			color $color1
			border-radius: 8px 0 0 8px;
			margin-left 1px
			background: url(../img/settings.svg) no-repeat 6px 2px;
			height: 22px
			width: 24px
			top: 0;
			left: 0;
		.settings-options
			top: 0;
			left: 33px;
			background: #4888f3;
			display: none;
			position: relative;
			width: 100%;
			min-width: 100%;
			// height: 24px;
			padding: 1px 5px 1px 5px;
			border-radius: 0 8px 8px 0;
			z-index: 2;
			border: 2px solid #fff;
			border-left-width: 0
			white-space: nowrap;
			>div
				width: 100%;
				padding: 2px 0;
				label
					line-height: 1.4
					font-size 13px
					color $color_white
					user-select none
					cursor pointer

				input
					line-height 1
					margin 3px 5px 3px 4px
					float left
					cursor pointer
				input[type='checkbox']
					-webkit-font-smoothing antialiased
					text-rendering optimizeSpeed
					width 15px
					height 15px
					margin 2px
					margin-right 5px
					display block
					float left
					position relative
					cursor pointer
				input[type='checkbox']:after
					content ""
					vertical-align middle
					text-align center
					line-height 16px
					position absolute
					cursor pointer
					height 15px
					width 15px
					left 0px
					top 0px
					font-size 12px
					background $color_white
					box-shadow 0 0 2px $color7
					border-radius 3px
				input[type='checkbox']:checked:after
					background $color_white
					content '\2714'
					color #000
		&:hover
			.settings-options
				display block
			.settings-btn
				background-image: url(../img/settings_white.svg);
				background-position: 4px 0px;
				background-color: #4888f3;
				color $color_white
				border: 2px solid #fff;
				border-right-width: 0;
