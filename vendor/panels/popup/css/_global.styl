@import "vars.styl"

::-webkit-scrollbar {
	width: 12px;
}

::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
	border-radius: 10px;
}

::-webkit-scrollbar-thumb {
	border-radius: 10px;
	-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5);
}

ul, li {
	margin: 0;
	padding: 0;
	list-style: none
}

html, body
	max-width 420px
	min-width 420px
	width 420px
	margin auto
	overflow hidden
	background $color_white

.settings-btn
	user-select none

.wrap-options
	width: 100%;
	display: flex;
	align-items: center;


#panel
	width 100%
	height 32px
	border-radius 0
	overflow hidden
	display flex
	justify-content space-around
	>div
		width 100%
		padding 5px 0
		text-align center
		cursor pointer
		line-height 1.7
		font-size 14px
		user-select none
		position relative
		color:#fff
		text-shadow: 0 0 2px #807c7c;
		font-weight: bold;
	>div.active
		cursor default
		color $color_white
		font-weight bold
		color #FFF

	>div.active.btn-tabs
		background: $color1;

	>div.active.btn-bookmarks
		background: $color2;

	>div.active.btn-history
		background: $color3;

	>.btn-tabs:not(.active):hover
		background: -webkit-linear-gradient($color1, $color_white);

	>.btn-bookmarks:not(.active):hover
		background: -webkit-linear-gradient($color2, $color_white);

	>.btn-history:not(.active):hover
		background: -webkit-linear-gradient($color3, $color_white);

	>div:first-child+div
		border-left: 1px solid $color_white
		border-right: 1px solid $color_white


.btn-tabs {
	background: -webkit-linear-gradient($color1, $color_white);
}

.btn-bookmarks {
	background: -webkit-linear-gradient($color2, $color_white);
}

.btn-history {
	background: -webkit-linear-gradient($color3, $color_white);
}

tabs(col)
	border 3px solid col
	box-shadow inset 0 0 7px col
	border-radius 0 0 2px 2px

.tab-tabs
	tabs($color1);

.tab-bookmarks
	tabs($color2);

.tab-history
	tabs($color3);

.tabs > div.active, .search:valid + div .remove-text-search
	display block

.tabs > div, .search:invalid + div .remove-text-search
	display none

.wrap-tabs, .wrap-bookmarks, .wrap-history
	width 100%
	display flex
	justify-content flex-start
	flex-direction row
	flex-wrap wrap

.options-bottom
	display: flex;
	align-items: center;
	width: 100%;
	height 20px;
	padding: 8px 2px 8px 2px;
	position: relative

.search-block
	width: 100%;
	position: relative;
	.wrap-search
		position relative
		height 30px
		.search
			margin 5px 5px 0
			border 1px solid #aaa
			padding 5px 58px 5px 5px
			width calc(100% - 75px)
			position absolute
			z-index 1
			top 0
			border-radius 3px
			overflow hidden
			font-size 14px
			background-color: rgba(255,255,255,0.2)
		.search:focus
			transition-property: background 0.3s
			transition-duration: 0.1s
			outline: none;
		.inner-search
			position: absolute;
			right: 6px;
			top: 5px;
			display: flex
			.remove-text-search
				position: relative;
				color: $red;
				font-size: 16px;
				z-index: 10;
				cursor: pointer;
				font-family: cursive;
				font-size: 16px;
				width: 27px;
				height 27px;
				text-align: center;
				user-select: none;
				background: url(../img/delete_active.svg) no-repeat 5px 7px;
			.add-tag
				position relative
				z-index 2
				width 30px
				height 27px
				text-align center
				line-height 1.4
				background-color transparent
				font-size 18px
				font-weight bold
				color $color_white
				cursor pointer
				user-select none
				border-radius 0 3px 3px 0
				&:active
					opacity 0.7
			.open-tabs
				padding: 0 0 0 0;
				height: 27px;
				min-width 50px;
				position: relative;
				text-align: center;
				span
					font-size 14px
					color $color1
					padding 0
					line-height: 2
					vertical-align middle
					user-select: none
				.cssload-container
					width: 100%;
					height: 25px;
					text-align center
					position absolute
					top:3px
					left 0
					z-index 11
					.cssload-speeding-wheel
						width 17px
						height 17px
						margin 0 auto
						border-style solid
						border-width 3px
						border-radius 50%
						animation cssload-spin 575ms infinite linear
						border-left-color transparent
						border-right-color transparent

@keyframes cssload-spin {
	100%{ transform: rotate(360deg); transform: rotate(360deg); }
}

#loader-history, #loaderBookmarks
	opacity: 0;
	transition: all 0.5s;
	z-index: 9;
	&.active
		opacity: 1;
		transition: all 0.5s;
		z-index: 11;

.none {
	display: none;
}
.not-found 
	border-bottom: 1px solid #ddd;
	position: relative;
	padding: 10px 0 !important;
	display: flex;
	align-items: center;
	width:100%;
	text-align: center;
	justify-content: center;

