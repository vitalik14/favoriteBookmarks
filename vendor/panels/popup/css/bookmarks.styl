@import "vars.styl"

.wrap-bookmarks {
	width: 100%;
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
}

.wrap-search {
	position: relative;
	height: 30px;
}

.search {
	margin: 5px 5px 0;
	padding: 5px 58px 5px 5px;
	border: 1px solid $color1;
	width: calc(100% - 75px);
	position: absolute;
	z-index: 1;
	top: 0;
	border-radius: 3px;
	overflow: hidden;
	font-size: 14px;
}
.tab-bookmarks .search {
	border: 1px solid $color9;
}
.add-tag
	position absolute
	z-index 2
	width 30px
	height 27px
	text-align center
	right 5px
	top 5px
	line-height 1.4
	background $color1
	font-size 18px
	font-weight bold
	color $color_white
	cursor pointer
	user-select none
	border-radius 0 3px 3px 0
	&:active
		opacity 0.7

.tab-bookmarks #add_tag_bookmark {
	background: $color9;
}

.tab-bookmarks .cssload-speeding-wheel {
	border-color: $color2;
	border-left-color: transparent;
	border-right-color: transparent;
}

.search-block {
	width: 100%;
	position: relative;
}

.remove-text-search {
	position: absolute;
	color: $red;
	font-size: 16px;
	top: 6px;
	right: 40px;
	z-index: 10;
	cursor: pointer;
	font-family: cursive;
	font-size: 16px;
	width: 25px;
	text-align: center;
	user-select: none;
}

.tags
	margin: 5px 0;
	width: 400px;
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
	overflow: hidden;
	max-height: 87px;
	overflow-x: hidden;
	overflow-y: auto;
	width: 100%;
	padding: 0 4px;
	.tag
		display inline-block
		background $color7
		border-radius 4px
		margin 3px 2px
		box-shadow 1px 1px 2px $color11
		border-width 2px
		border-style solid
		color #000
		user-select none
		&:active
			opacity 0.7
		.tag-del
			color $red
			width 14px
			padding 0 0px 2px 0px
			display inline-block
			text-align center
			vertical-align top
			cursor pointer

		.tagName
			padding 2px 7px 6px 0px
			line-height 0.8
			display inline-block
			vertical-align middle
			max-width 150px
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			cursor pointer




.openAll
	width 100%

#openBookmarks
	display block
	background $color9
	border 2px solid $color_white
	border-radius 8px
	color $color_white
	padding 5px 10px
	cursor pointer
	float right
	user-select none
	&:hover
		box-shadow: inset 0 0 4px $color_white
		border-color $color9

#findBookmarks
	color $color_white

.options-bookmarks
	display: flex;
	align-items: center;
	width: 100%;
	padding: 5px;
	background: $color7;
	.settings
		display: flex;
		align-items: center;
		justify-content: space-around;
		.settings-btn
			cursor: default;
			color: $color4;
			border: none;
			margin-right: 5px;
			font-size: 14px;
		select
			height: 26px;

.results-bookmarks
	max-height: 380px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px -1px 4px $color9;
	padding-left: 2px;
	margin-top: 2px;
	>li
		border-bottom: 1px solid #DDD;
		position: relative;
		padding: 10px 0;
		display: flex;
		align-items: center;
		&:nth-child(odd)
			background-color: $color6;
		&:last-child
			.show-url
				&:hover
					&:before
						width: 31px;
						height: 22px;
						position: absolute;
						content: '';
						left: -6px;
						top: 12px;
						z-index: 10
		&:hover
			background-color: rgba(75, 192, 177, 0.1) !important;
			transition: all 0.2s;
		a
			display: inline-block;
			color: $color10;
			font-size: 13px;
			text-decoration: none;
			padding: 5px 0 4px 30px;
			background-size: 16px;
			background-repeat: no-repeat;
			background-position: 5px 6px;
			width: calc(100% - 49px);
			cursor: pointer;
			text-rendering: optimizeSpeed;
		.delete
			width 15px
			height 15px
			line-height 1
			text-align center
			color $color10
			border-radius 50%
			box-shadow 0 0 0px #F33
			display inline-block
			vertical-align top
			font-size 13px
			font-weight bold
			cursor pointer
			transition all 0.1s
			font-family Arial
			margin-top 6px
			margin-left 2px
			align-self: flex-start;
			&:hover
				box-shadow 0 0 5px $red
				~a
					color $red	
		.btn-search
			background-image: url(../img/history_filter.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 0;
			left: 375px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				background-image: url(../img/bookmarks_filter_active.svg);
		.time
			display: inline-block;
			font-size: 12px;
			position: absolute;
			top: 0;
			left: 217px;
			width: max-content;
			background: #fff;
			padding: 0 2px;
			user-select none
			opacity: 0.6;
		.show-url
			background-image: url(../img/history_info.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 0;
			left: 347px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				cursor: help;
				z-index: 11;
				background-image: url(../img/history_info.svg);
				+a
					.url
						display: block;
			+a
				.url
					display: none;
					word-break: break-word;    
					z-index: 100;
					background: #ffffff;
					left: -5px;
					width: calc(100% - 15px);
					position: absolute;
					top: 33px;
					text-decoration: none;
					padding: 7px 10px 9px 10px;
					border-top: 2px solid #4bc0b1;
					border-bottom: 2px solid #4bc0b1;
					box-shadow: 0 23px 50px #666;
					&:hover
						display: block;
				