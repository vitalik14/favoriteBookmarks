@import "vars.styl"

.tab-bookmarks
	.wrap-bookmarks
		background #f6fcfb
	.search-block
		.search
			border 1px solid $color9
			box-shadow 0px 1px 8px $color2
		.inner-search
			.add-tag
				background-color $color2
			.cssload-speeding-wheel
				border-color $color2
			.open-tabs span
				color $color2

.results-bookmarks
	max-height: 346px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px 0px 7px $color9;
	padding-left: 2px;
	margin-top: 2px;
	>li
		border-bottom: 1px solid #DDD;
		position: relative;
		padding: 10px 0 10px 2px;
		display: flex;
		align-items: center;
		transition: all 0.3s;
		&:nth-child(odd)
			background-color: $color6;
		&:last-child
			.show-url
				&:hover
					&:before
						width: 31px;
						height: 22px;
						position: absolute;
						content: '';
						left: -6px;
						top: 12px;
						z-index: 10
		&:hover
			background-color: rgba(75, 192, 177, 0.1) !important;
			transition: all 0.1s;
		a
			display: inline-block;
			color: $color10;
			font-size: 13px;
			text-decoration: none;
			padding: 4px 0 4px 30px;
			background-size: 16px;
			background-repeat: no-repeat;
			background-position: 5px 6px;
			width: calc(100% - 49px);
			cursor: pointer;
			text-rendering: optimizeSpeed;
		.delete
			width 15px
			height 15px
			line-height 1
			text-align center
			color $color10
			border-radius 50%
			box-shadow 0 0 0px #F33
			display inline-block
			vertical-align top
			font-size 13px
			font-weight bold
			cursor pointer
			transition all 0.1s
			font-family Arial
			margin-top 7px
			margin-left 2px
			align-self: flex-start;
			background: url(../img/delete.svg) no-repeat 0px 0px
			&:hover
				background: url(../img/delete_active.svg) no-repeat 0px 0px
				~a
					color $red

		.btn-search
			background-image: url(../img/history_filter.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 2px;
			left: 375px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				background-image: url(../img/bookmarks_filter_active.svg);
		.time
			display: inline-block;
			font-size: 12px;
			position: absolute;
			top: 1px;
			left: 205px;
			width: max-content;
			background: #fff;
			padding: 0 2px;
			user-select none
			opacity: 0.6;
		.show-url
			background-image: url(../img/history_info.svg);
			width:15px;
			height 15px;
			background-size: contain;
			position: absolute;
			z-index : 9;
			top: 2px;
			left: 347px;
			cursor: pointer;
			white-space: nowrap;
			&:hover
				cursor: help;
				z-index: 11;
				background-image: url(../img/history_info.svg);
				+a
					.url
						display: block;
			+a
				.url
					display: none;
					word-break: break-word;    
					z-index: 100;
					background: #ffffff;
					left: -5px;
					width: calc(100% - 15px);
					position: absolute;
					top: 33px;
					text-decoration: none;
					padding: 7px 10px 9px 10px;
					border-top: 2px solid #4bc0b1;
					border-bottom: 2px solid #4bc0b1;
					box-shadow: 0 23px 50px #666;
					&:hover
						display: block;












.options-bottom
	.open-all-bookmarks
		width 100%
		button
			display block
			background $color9
			border 2px solid $color_white
			border-radius 8px
			color $color_white
			padding 5px 10px
			cursor pointer
			float right
			user-select none
			&:hover
				box-shadow: inset 0 0 4px $color_white
				border-color $color9
			span
				color $color_white

	.options
		display: flex;
		align-items: center;
		justify-content: space-around;
		select
			height: 26px;
			outline: none
			border-color: $color2	
			appearance none
			-webkit-appearance none
			background url(../img/sort.svg) no-repeat 0 0
			padding 0 15px 0 30px